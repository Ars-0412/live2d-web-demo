{
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": [
        "Framework/src/*"
      ],
      "Live2DCubismCore": [
        "./Core/Live2DCubismCore/live2dcubismcore"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "Framework/src/**/*"
  ]
}